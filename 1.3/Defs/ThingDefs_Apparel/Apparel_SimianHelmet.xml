<?xml version="1.0" encoding="UTF-8"?>
<Defs>

	<ThingDef ParentName="ArmorHelmetMakeableBase">
		<defName>ApePlanet_SimianHelmet</defName>
		<label>simian helmet</label>
		<description>A simple helmet which gives moderate protection against attacks.</description>
		<techLevel>Industrial</techLevel>
		<graphicData>
			<texPath>ApePlanet/Apparel/SimianHelmet/Head</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>CutoutComplex</shaderType>
		</graphicData>
		<uiIconScale>1.4</uiIconScale>
		<stuffCategories>
			<li>Metallic</li>
		</stuffCategories>
		<costStuffCount>40</costStuffCount>
		<statBases>
			<WorkToMake>3200</WorkToMake>
			<MaxHitPoints>100</MaxHitPoints>
			<Mass>2</Mass>
			<StuffEffectMultiplierArmor>0.5</StuffEffectMultiplierArmor>
			<StuffEffectMultiplierInsulation_Cold>0.15</StuffEffectMultiplierInsulation_Cold>
			<StuffEffectMultiplierInsulation_Heat>0</StuffEffectMultiplierInsulation_Heat>
			<EquipDelay>1.5</EquipDelay>
		</statBases>
		<recipeMaker>
			<useIngredientsForColor>false</useIngredientsForColor>
			<researchPrerequisite>Smithing</researchPrerequisite>
			<recipeUsers>
				<li>ElectricSmithy</li>
				<li>FueledSmithy</li>
			</recipeUsers>
		</recipeMaker>
		<apparel>
			<countsAsClothingForNudity>false</countsAsClothingForNudity>
			<bodyPartGroups>
				<li>UpperHead</li>
			</bodyPartGroups>
			<wornGraphicPath>ApePlanet/Apparel/SimianHelmet/Head</wornGraphicPath>
			<useWornGraphicMask>true</useWornGraphicMask>
			<layers>
				<li>Overhead</li>
			</layers>
			<tags>
				<li>SimianMilitaryBasic</li>
			</tags>
			<defaultOutfitTags>
				<li>Soldier</li>
			</defaultOutfitTags>
		</apparel>
		<colorGenerator Class="ColorGenerator_Options" Inherit="False">
			<options>
				<li>
					<weight>10</weight>
					<only>(255, 255, 255)</only>
				</li>
			</options>
		</colorGenerator>
	</ThingDef>

</Defs>